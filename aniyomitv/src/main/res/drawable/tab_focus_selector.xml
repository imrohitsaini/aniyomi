<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/semi_white" />
            <padding android:bottom="@dimen/_4dp" android:left="@dimen/_4dp" android:right="@dimen/_4dp" android:top="@dimen/_4dp" />
            <corners android:radius="@dimen/tab_focus_radius" />
        </shape>
    </item>
</selector>
