<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
     Declare that the app can run on Android TV devices.
     The "android.software.leanback" feature indicates the app is compatible with TV UI (Leanback library).
     required="false" means the app **can still be installed on non-TV devices**,
     but it will run better on TVs.
    -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <!--
        Declare that the app **does not require a touchscreen**.
        This is typical for TV apps since TV remotes are used instead of touch.
        required="false" ensures non-touch devices like TVs are supported.
    -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- For managing extensions -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.UPDATE_PACKAGES_WITHOUT_USER_ACTION" />

    <!-- To view extension packages in API 30+ -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:banner="@drawable/ic_banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aniyomi">


        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExoPlayerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".episodes.presentation.activity.EpisodesActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".main.ui.activities.MainActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".PlayerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".TestingActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
