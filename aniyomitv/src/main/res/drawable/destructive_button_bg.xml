<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Focused Button-->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/anime_tv_errorContainer" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/_2dp" android:color="@color/anime_tv_onErrorContainer" />
        </shape>
    </item>

    <!--    Default Button-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/anime_tv_errorContainer" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>
