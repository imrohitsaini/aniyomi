<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <padding android:bottom="@dimen/_4dp" android:left="@dimen/_4dp" android:right="@dimen/_4dp" android:top="@dimen/_4dp" />
            <corners android:radius="@dimen/chips_radius" />
        </shape>
    </item>

    <!-- Default -->
    <item android:drawable="@drawable/surface_dotted_rounded_rectangular_background" />
</selector>
