<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State (highest priority) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/anime_tv_primary" />
            <corners android:radius="@dimen/chips_radius" />
        </shape>
    </item>


    <!-- Default / Not Selected State -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_2dp" android:color="@color/white" />
            <corners android:radius="@dimen/chips_radius" />
            <padding android:bottom="@dimen/_2dp" android:left="@dimen/_2dp" android:right="@dimen/_2dp" android:top="@dimen/_2dp" />
        </shape>
    </item>
</selector>
